<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<!--    Heading     -->
    <TextView
        android:id="@+id/JudulForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Formulir Peminjaman Buku"
        android:textColor="@color/black"
        android:textSize="20sp" />
<!--    Heading End     -->
<!--    Nama Start    -->
    <TextView
        android:id="@+id/labelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Nama Anggota"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />
<!--    Nama End    -->
<!--    Kelas Start    -->
    <TextView
        android:id="@+id/labelClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins"
        android:text="Kelas"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/inputClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Kelas Anggota"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />
<!--    Kelas End   -->
<!--    Kode Buku Start   -->
    <TextView
        android:id="@+id/labelCodeBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins"
        android:text="Kode Buku"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/inputCodeBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Kode Buku"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:inputType="number"
        />
<!--    Kode Buku End   -->
<!--    Button Start    -->
    <Button
        android:id="@+id/ButtonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#689F38"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="submit"
        android:textSize="15sp"
        android:textAllCaps="true"
        />
<!--    Button End      -->
    <TextView
        android:id="@+id/showName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />
    <TextView
        android:id="@+id/showClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />
    <TextView
        android:id="@+id/showCodeBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />
</LinearLayout>