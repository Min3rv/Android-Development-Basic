<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".DashboardActivity">

    <ImageButton
        android:id="@+id/ibMenu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_sort"
        android:backgroundTint="#000" />

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/latihan_rectangle" />

    <ImageView
        android:id="@+id/ivRyuk"
        android:layout_width="275dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ryuk_dn" />

    <TextView
        android:id="@+id/tvSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibMenu"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Sale"
        android:textColor="@color/black"
        android:layout_marginTop="220dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSale"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/montserrat"
        android:text="30%"
        android:textColor="@color/black"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPercent"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Limited Time"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tvLimit"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#000000"
        />
    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_below="@id/line"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tvArrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:text="New Arrival"
        android:textColor="#636363"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textSize="20sp"
        android:layout_below="@id/line"
        android:fontFamily="@font/montserrat"
        android:textColor="#636363"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:id="@+id/ryuk2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ryuk2"
        android:background="@drawable/card_image"
        android:layout_below="@id/tvPopular"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/TextOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvArrival"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/ryuk2"
        android:fontFamily="@font/montserrat"
        android:text="Ryuk"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextOne"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/ryuk2"
        android:fontFamily="@font/montserrat"
        android:text="Takeshi Obata"
        android:textColor="#636363"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/TextThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 42.99"
        android:textColor="#41b549"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        android:layout_below="@id/TextTwo"
        android:layout_toRightOf="@id/ryuk2"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/ryuk3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ryuk3"
        android:background="@drawable/card_image"
        android:layout_below="@id/ryuk2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextThree"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ryuk3"
        android:fontFamily="@font/montserrat"
        android:text="Shinigami"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text1"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/ryuk3"
        android:fontFamily="@font/montserrat"
        android:text="Tsugumi Ohba"
        android:textColor="#636363"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 81.99"
        android:textColor="#41b549"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        android:layout_below="@id/Text2"
        android:layout_toRightOf="@id/ryuk3"
        android:layout_marginStart="20dp"
        />
</RelativeLayout>