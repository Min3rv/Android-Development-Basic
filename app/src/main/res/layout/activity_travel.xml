<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TravelActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/swiss_destination"
        />
<!--    Horizontal-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
<!--    Vertical-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campground"
        android:textColor="@color/black"
        android:textSize="27dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanderstag, Switzherland."
        android:textSize="15dp"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/poppins"
        tools:ignore="TextSizeCheck"
        />
<!--    Vertical    -->
        </LinearLayout>
<!--    Horizontal-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_star_rate_24"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.1"
                android:textSize="27dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
<!--    Horizontal-->
    </LinearLayout>
    <!--    Horizontal-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        >
        <!--    Vertical-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="55dp"
            >
            <ImageButton
                android:id="@+id/ibCall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_call_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textSize="25dp"
                android:textColor="#0E4290"
                android:fontFamily="@font/poppins"
                />
<!--    Vertical    -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            >

            <ImageButton
                android:id="@+id/ibNavi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_navigation_24"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route"
                android:textSize="25dp"
                android:textColor="#0E4290"
                android:fontFamily="@font/poppins"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            >
            <ImageButton
                android:id="@+id/ibShare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_share_24"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="25dp"
                android:textColor="#0E4290"
                android:fontFamily="@font/poppins"
                />
        </LinearLayout>
<!--     Horizontal     -->
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/lorem"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:justificationMode="inter_word"
        />
</LinearLayout>